    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Hugo server with Bootstrap v5 base-theme",
            "type": "shell",
            "windows": {
                "command": "hugo server --source \"tests/base-theme\" --watch -D --disableFastRender"
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Run Hugo server with Bootstrap v5 SCSS module",
            "type": "shell",
            "windows": {
                "command": "hugo server --source \"tests/scss-module\" --watch -D --disableFastRender"
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": []
        }
    ]
}
